{
  "watch": ["src/**", "config/**"],
  "exec": "ts-node -r dotenv/config -r tsconfig-paths/register src/main.ts dotenv_config_path=./config/development/.env",
  "restartable": "rs",
  "verbose": false,
  "ignore": ["src/**/*.spec.ts","/node_modules/**"],
  "nodeArgs": [
    {"NODE_ENV":"development"}
  ],
  "ext": "js,ts, jade, tsx, jsx, mjs"
}